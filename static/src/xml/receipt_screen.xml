<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.ReceiptScreen" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('buttons')]" position="after">
            <button class="button print btn btn-lg btn-secondary w-100 py-3"
                    t-on-click="printOnlineReceipt">
                <i class="fa fa-print ms-2" t-ref="online-order-print-receipt-button"/>
                Print Online Order Receipt
            </button>
        </xpath>
    </t>
</templates>
